<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together"
    android:duration="300">

    <slide android:slideEdge="top" >
        <targets >
            <target android:targetId="@id/app_bar" />
        </targets>
    </slide>
    <slide android:slideEdge="bottom" android:startDelay="100">
        <targets>
            <target android:targetId="@id/slide_bottom"  />
        </targets>
    </slide>
    <slide android:slideEdge="bottom" android:startDelay="200">
        <targets>
            <target android:targetId="@id/add_comment" />
        </targets>
    </slide>
</transitionSet>