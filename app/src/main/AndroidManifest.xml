<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guo.news">

    <permission
        android:name="com.guo.news.provider.READ" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.guo.com.guo.news.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.guo.news"

            android:name="com.guo.com.guo.news.data.local.NewsProvider"

            android:exported="true"
            android:readPermission="com.guo.news.provider.READ"/>
    </application>

</manifest>